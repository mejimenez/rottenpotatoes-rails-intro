-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{ class:[ (:hilite if @htitle) ] }=  link_to 'Movie Title', sort_by_title_movies_path
      %th{ class:[ (:hilite if @hrating) ] }=  link_to 'Movie Rating', sort_by_rating_movies_path
      %th{ class:[ (:hilite if @hrelease) ] }=  link_to 'Relese Date', sort_by_release_movies_path
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
